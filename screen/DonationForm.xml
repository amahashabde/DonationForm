<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">
    <widgets>
        <label type="h1" text="Online Donation form, please enter your information"/>
                            <form-single name="EditUser">
                   
                    <field name="Name"><default-field><text-line size="15"/></default-field></field>
                    
                    <field name="emailAddress" from="emailAddress ?: primaryEmail?.emailAddress"><default-field><text-line size="15"/></default-field></field>
<field name="phoneNum"><default-field><text-line size="15"/></default-field></field>
                    <field name="Donation Amount"><default-field><text-line size="15"/></default-field></field>
<field name="Credit Card  #"><default-field><text-line size="15"/></default-field></field>
                     <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
                </form-single>
                </widgets>
</screen>